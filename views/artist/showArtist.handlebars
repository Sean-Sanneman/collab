<script>
    let selects = document.getElementsByTagName('select');
    let len = selects.length;
    let innerLen;
    for(let i=0; i<len; i++) {
        innerLen = selects[i].options.length
        for(let j=0; j<innerLen; j++) {
            if(selects[i].options[j].value === selects[i].dataset.value) {
                selects[i].options[j].selected = true
            }
        }
    }
</script>

